<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"

            android:layout_weight="0"
            android:text="Enter Customer details"
            style="@style/home_btn"
            android:background="@color/maincolor"
            android:layout_marginBottom="10dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer name"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/cart_custdialog_et_custname"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Mobile"
                android:inputType="number"

                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/cart_custdialog_et_custmob"/>

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@color/colorAccent"
                android:id="@+id/cart_custdialog_btn_cancel"
                android:layout_height="wrap_content"
                style="@style/home_btn"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Generate Bill"
                android:id="@+id/cart_custdialog_btn_Generatebill"
                android:layout_height="wrap_content"
                style="@style/home_btn"/>

        </LinearLayout>


    </LinearLayout>







</LinearLayout>